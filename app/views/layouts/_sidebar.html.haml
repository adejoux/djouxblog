- if params[:controller] == "wiki"
  = render :partial => 'wiki_sidebar', :locals => { :wiki => @wiki }

%h1 Recent posts
%ul
  - @post_list.each do |post|
    %li=link_to post.title, post_path(post)
%h1 Wiki updates
%ul
  - @wiki_list.each do |wiki|
    %li=link_to wiki.title, wiki_path(wiki)
%h1 Tag Cloud
#tag_cloud
  - tag_cloud Page.tag_counts, %w{s m l} do |tag, css_class|
    = link_to tag.name, tag_path(tag.name), class: css_class

- if is_admin_user? and params[:controller] == "pages" and params[:action] == "show"
  %h1 History
  = render :partial => 'pages/history', :locals => { :page => @page }
