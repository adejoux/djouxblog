- @posts.each do |post|
  %h1= link_to post.title, post
  .date
    = post.created_at.to_formatted_s(:long)
    |
    = post.author || ""
    |
    = raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
  %br
  %p= raw post.summary
  .author= link_to 'Read more...', post
  %br
= paginate @posts

- if is_admin_user?
  = link_to 'New Post', new_post_path
